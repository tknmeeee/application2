<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book</h1>
           <% if @book.errors.any? %>
             <div id="error_explanation">
              <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
               <ul>
                 <% @book.errors.full_messages.each do |msg| %>
                 <li><%= msg %></li>
                 <% end %>
              </ul>
             </div>
            <% end %>
		<%= form_for (@book) do |f| %>
		 <div class="field">
		   <label>Title</label>
		   <%= f.text_field :title, autofocus: true, class: "form-group col-xs-12" %>
		</div>
		<div class="field">
		  <label>Opinion</label>
		  <%= f.text_area :body, autofocus: true, class: "form-group col-xs-12" %>
		</div>
		<%= f.submit "Update Book", class: "btn btn-primary col-xs-12"%>
	    <% end %>
	    <%= link_to "Show", book_path(@book) %> | 
	    <%= link_to "Back", books_path %>
	</div>
	</div>
</div>