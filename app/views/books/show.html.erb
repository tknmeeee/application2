<div class="container">
  <% if flash[:notice] %>
   <p class="success">
   <%= flash[:notice] %>
  <% end %>
  <div class="row">

     <%= render 'layouts/left', book: @book, user: @user %>

        <div class="col-xs-9">
          <h2>Book detail</h2>
           <table class="table">
            <tr>
              <td><%= link_to user_path(@books.user) do %>
                <%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %><%=@books.user.name %></td>
                <% end %>
              <td><%= link_to book_path(@books) do %>
                <%= @books.title %></td>
                <% end %>
              <td><%= @books.body %></td>

              <% if @books.user == current_user %>
               <td><%= link_to 'Edit', edit_book_path, class: "btn btn-success" %></td>
               <td><%= link_to "Destroy", book_path(@books),method: :delete,"data-confirm" => "本当に消しますか？", class: "btn btn-danger" %></td>
              <% end %>
            </tr>
          </table>
        </div>
      </div>
    </div>